<%= form_with(model: provider, local: true) do |form| %>
  <% if provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(provider.errors.count, "error") %> prohibited this provider from being saved:</h2>

      <ul>
      <% provider.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="col-lg-12">
  <div class="panel panel-default">

    <div class="panel-heading">
      <h4>Fornecedores</h4>
    </div>
 
    <div class="panel-body">
      <div class="form-group">
        <div class="col-lg-6">
            <%= form.label :quotation_date  %>
            <%= date_field_tag 'provider[quotation_date]', @provider.quotation_date.present? ? @provider.quotation_date : nil, class: 'form-control', required: true %>

            <br />
        </div>
        <div class="col-lg-6">
          <%= form.label :company %>
          <%= form.text_field :company, class: 'form-control', required: true  %>
          <br />
        </div>
        <div class="col-lg-6">
            <%= form.label :unity  %>
            <%= form.text_field :unity, class: 'form-control', required: true  %>
            <br />
        </div>
       
        
        <div class="col-lg-6">
          <%= form.label :value %>
          <%= form.text_field :value, class: 'form-control', required: true %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-12">
         <%= form.label :description  %>
         <%= form.text_field :description, class: 'form-control', required: true  %>
         <br>
        </div>
        
        <div class="col-lg-6">
          <%= form.label :adress %>
          <%= form.text_field :adress, class: 'form-control', required: false  %>
        </div>
      </div>
      <br>
      <div class="form-group">
        <div class="col-lg-6">
          <%= form.label :state %>
          <%= form.select :state, 
          options_for_select(providers_states_i18n, selected: Provider.states[form.object.state]),
                { include_blank: 'Selecione o estado' },
                { class: 'form-control', required: true }  %>
          <br />

        </div>
        <div class="col-lg-6">
          <%= form.label :phone %>
          <%= form.text_field :phone, class: 'form-control', required: false  %>
        </div>
      </div>

        <div class="form-group">
          <div class="col-lg-6">
            <%= form.label :email %>
            <%= form.text_field :email, class: 'form-control', required: false %>
            <br>
          </div>
          
          <div class="col-lg-6">
            <%= form.label :website %>
            <%= form.text_field :website, class: 'form-control', required: false %>
          </div>
        </div>

       <div class="form-group">
        <div class="col-lg-6">
          <%= form.label :contact %>
          <%= form.text_field :contact, class: 'form-control', required: false %>
        <br>
        </div>
        <div class="col-lg-6">
          <%= form.label :remark %>
          <%= form.text_area :remark, class: 'form-control', required: false %><br>
        </div>
       </div> 
    </div>
  </div>
   <a class="btn btn-secondary btn-sm" <%= link_to "Voltar", providers_path %>
 <button name="button" type="submit" class="btn btn-success btn-sm">Salvar</button>
</div>
<% end %> 




