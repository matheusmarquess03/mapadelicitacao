


<div class="col-lg-12">
  <div class="panel panel-default">

        <div class="panel-heading">
          <h4>Detalhes do Fornecedor</h4>
        </div>
        
        <br/>

        <div class="panel-body">  
          <div class="form-group">
            <div class="col-lg-6">
              <h4>Data da Cotação:
                <%= l @provider.quotation_date %>
              </h4> 
              <br>
              <h4>Descrição:
                <%= @provider.description %>
              </h4> 
            <br>
              <h4>Unidade:
                <%= @provider.unity %>
              </h4>
              <br />
              <h4>Valor:
                <%= @provider.value %>
              </h4> 
            <br>
              <h4>Empresa:
                <%= @provider.company %>
              </h4>
              <br>
              <h4>Endereço: 
                <%= @provider.adress %>
              </h4>
              <br>
              <h4> Estado: 
                <%= t("enums.providers.state.#{@provider.state}") %> 
              </h4>
              <br>
              <h4>Telefone:
                <%= @provider.phone %>
              </h4>
              <br>
              <h4>Email:
              <%= @provider.email%>
            </h4>
            <br>
            <h4>Website:
                <% if @provider.website.blank? %>
                    <%= @provider.website %>
                <% else %>
                    <a href="<%= @provider.website %>" target="_blank"><b><u><%= @provider.website %></b></u></a>
                <% end %>
              </h4>
              <br />
              <h4>Contato:
                <%= @provider.contact %>
              </h4>
              <br>
              <h4>Observações:
                <%= @provider.remark %>
              </h4>
              <br>  
          </div>
        </div>
      </div>

   </div>
   <%= link_to 'Voltar', providers_path, class: 'btn btn-info btn-sm' %>
</div>

      
 

      



