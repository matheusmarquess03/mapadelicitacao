


<div class="col-lg-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Fornecedores
        <%= link_to "Cadastrar", new_provider_path,  class: "btn btn-outline btn-success pull-right", style: "margin-top: -5px" %>
      </h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
          <th><%= Provider.human_attribute_name("quotation_date") %></th>    
          <th><%= Provider.human_attribute_name("description") %></th>    
          <th><%= Provider.human_attribute_name("unity") %></th>
          <th><%= Provider.human_attribute_name("value") %></th>
          <th><%= Provider.human_attribute_name("company") %></th>
          <th><%= Provider.human_attribute_name("adress") %></th>
          <td><%= Provider.human_attribute_name("state") %></td>
          <th><%= Provider.human_attribute_name("phone") %></th>
          <th><%= Provider.human_attribute_name("email") %></th>
          <th><%= Provider.human_attribute_name("website") %></th>
          <th><%= Provider.human_attribute_name("contact") %></th>
          <th><%= Provider.human_attribute_name("remark") %></th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
            <% @providers.each do |provider| %>
              <tr>
          <td><%= l provider.quotation_date %></td>      
          <td><%= provider.description %></td>      
          <td><%= provider.unity %></td>
          <td><%= provider.value %></td>
          <td><%= provider.company %></td>
          <td><%= provider.adress %></td>
          <td><%= provider.state %></td>
          <td><%= provider.phone %></td>
          <td><%= provider.email %></td>
          <td><%= provider.website %></td>
          <td><%= provider.contact %></td>
          <td><%= provider.remark %></td>
          <td><%= link_to edit_provider_path(provider), class: "btn btn-outline btn-warning" do %>
                      <i class="fa fa-edit"></i><% end %>
                    </td>
          <td><%= link_to provider_path(provider), class: "btn btn-outline btn-info" do %>
                <i class="fa fa-eye"></i></i><% end %>
              </td>          
          <td><%= link_to provider_path(provider), class: 'btn btn-outline btn-danger', method: :delete, data: { confirm: 'Ao confirmar esta operação será perdido definitivamente os dados desta licitação. Tem certeza que deseja fazer isto?' } do %>
                        <i class="fa fa-times"></i>
                    <% end %>
                    </td>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

