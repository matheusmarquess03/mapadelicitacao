

  <div class="col-lg-12">
    <div class="panel panel-default">

      <div class="panel-heading">
        <h4>Licitação Detalhada</h4>
      </div>
    
      <br/>

    <div class="panel-body">
      <div class="form-group">
        <div class="col-lg-6">
         <h4>Data:
         <%= l @bidding.date %>
         </h4> 
        </div>
        <div class="col-lg-6">
          <h4>Orgão:
          <%= @bidding.organ %>
          </h4>
          <br />
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <h4>Modalidade:
        <%= @bidding.modality %>
         </h4> 
        </div>
        <div class="col-lg-6">
          <h4>Objeto:
        <%= @bidding.object %>
         </h4> 
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <h4>Valor: 
           <%= number_with_precision(@bidding.value, :precision => 2) %>
          </h4>
        </div>
        <div class="col-lg-6">
          <h4> Vistoria: 
            <%= @bidding.inspection %>
          </h4>
          <br />
        </div>
      </div>

      <div class="form-group">
        <div class="col-lg-6">
          <h4>Orçamento:
            <%= @bidding.budge %>
          </h4>
        </div>
      </div>  

        <div class="col-lg-6">
          <h4>Status:
            <%= t("enums.biddings.status.#{@bidding.status}")%>
          </h4>
          <br />
        </div>

        <div class="form-group">
          <div class="col-lg-6">
            <h4>Observação:
              <%= @bidding.remark %>
            </h4>
            <br />
        </div>
        </div>
         
         <div class="form-group">
          <div class="col-lg-6">
            <h4>Site:
              <%= @bidding.website %>
            </h4>
            <br />
          </div>
         </div>  

          <div class="form-group">
            <div class="col-lg-6">
            <h4>Tipo de Certificado:
              <%= t("enums.biddings.type_of_certificate.#{@bidding.type_of_certificate}") %>
            </h4>
            <br />   
            </div>  
          </div> 
      <br />

        <div class="form-group">
            <div class="col-lg-6">
            <h4>Empresa:
              <%= @bidding.company_id %>
            </h4>
            <br />   
            </div>  
          </div> 
      <br />
      <div class="form-group">
            <div class="col-lg-6">
            <h4>Tipo de Serviço:
              <%= @bidding.kind_of_service_id %>
            </h4>
            <br />   
            </div>  
          </div> 
      <br />

      <div class="form-group">
            <div class="col-lg-6">
            <h4>Observação:
              <%= @bidding.remark %>
            </h4>
            <br />   
            </div>  
          </div> 
      <br />
</div>
</div>
</div>

<%= link_to 'Voltar', biddings_path, class: 'btn btn-success btn-lg' %>



