<div class="col-lg-12">
  <h1 class="page-header">Listagem de Licitações</h1>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Licitações
        <a class="btn btn-outline btn-success pull-right" style="margin-top: -5px" href="http://localhost:3000/biddings/new">
          <i class="fa fa-plus-square fa-fw"></i> Cadastrar
</a>      </h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
              	  <th><%= Bidding.human_attribute_name("date") %></th>
				  <th><%= Bidding.human_attribute_name("organ") %></th>
				  <th><%= Bidding.human_attribute_name("modality") %></th>
				  <th><%= Bidding.human_attribute_name("object") %></th>
				  <th><%= Bidding.human_attribute_name("value") %></th>
				  <th><%= Bidding.human_attribute_name("inspection") %></th>
				  <th><%= Bidding.human_attribute_name("budge") %></th>
				  <th><%= Bidding.human_attribute_name("remark") %></th>
				  <th><%= Bidding.human_attribute_name("status") %></th>
              <th colspan="2"></th>
            </tr>
          </thead>

          <tbody>
          	<% @biddings.each do |bidding| %>
              <tr>
                    <td><%= bidding.date %></td>
					<td><%= bidding.organ %></td>
					<td><%= bidding.modality %></td>
					<td><%= bidding.object %></td>
					<td><%= bidding.value %></td>
					<td><%= bidding.inspection %></td>
					<td><%= bidding.budge %></td>
					<td><%= bidding.remark %></td>
					<td><%= bidding.status %></td>
					<td><a class="btn btn-outline btn-warning" href="http://localhost:3000/biddings/1/edit">
                      <i class="fa fa-edit"></i></a>
                    </td>
					<td><a class="btn btn-outline btn-danger" data-confirm="Tem certeza que deseja fazer isto?" rel="nofollow" data-method="delete" href="http://localhost:3000/biddings/1">
                        <i class="fa fa-times"></i></a> 
                    </td>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


