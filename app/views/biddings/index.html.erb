<div class="container-fluid">

<p id="notice"><%= notice %></p>

<h1>Biddings</h1>

<div class="card shadow mb-4">
	<div class="card-body">
		<div class="table-responsive">
			<table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
			  <thead>
				<tr>
				  <th>Date</th>
				  <th>Organ</th>
				  <th>Modality</th>
				  <th>Object</th>
				  <th>Value</th>
				  <th>Inspection</th>
				  <th>Budge</th>
				  <th>Remark</th>
				  <th>Status</th>
				  <th colspan="2"></th>
				</tr>
			  </thead>

			  <tbody>
				<% @biddings.each do |bidding| %>
				  <tr>
					<td><%= bidding.date %></td>
					<td><%= bidding.organ %></td>
					<td><%= bidding.modality %></td>
					<td><%= bidding.object %></td>
					<td><%= bidding.value %></td>
					<td><%= bidding.inspection %></td>
					<td><%= bidding.budge %></td>
					<td><%= bidding.remark %></td>
					<td><%= bidding.status %></td>
					<td><%= link_to 'Edit', edit_bidding_path(bidding) %></td>
					<td><%= link_to 'Destroy', bidding, method: :delete, data: { confirm: 'Are you sure?' } %></td>
				  </tr>
				<% end %>
			  </tbody>
			</table>

			<br>

			<%= link_to 'New Bidding', new_bidding_path %>
		</div>
	</div>
</div>

<button type="button" class="btn btn-primary btn-lg"><%= link_to 'New Bidding', new_bidding_path %></button>



