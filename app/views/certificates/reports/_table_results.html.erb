  <div class="panel panel-default">
  <div class="panel-heading">
	<%= link_to certificates_path(format: :csv), class: 'btn btn-link' do %>
		<i class="fa fa-download"></i> Exportar para Planilha
    <% end %>
  </div>

  <div class="panel-body">
    <div class="table-responsive">
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= sort_link(@q, :number, Certificate.human_attribute_name("number")) %></th>
            <th><%= sort_link(@q, :responsible_enginner, Certificate.human_attribute_name("responsible_enginner")) %></th>
            <th><%= sort_link(@q, :description, Certificate.human_attribute_name("description")) %></th>
            <th><%= sort_link(@q, :unit, Certificate.human_attribute_name("unit")) %></th>
            <th><%= sort_link(@q, :quantity, Certificate.human_attribute_name("quantity")) %></th>
            <th><%= sort_link(@q, :book, Certificate.human_attribute_name("book")) %></th>
            <th><%= sort_link(@q, :item, Certificate.human_attribute_name("item")) %></th>
            <th><%= sort_link(@q, :company_name, Certificate.human_attribute_name("company_name")) %></th>
            <th><%= sort_link(@q, :verified, Certificate.human_attribute_name("verified")) %></th>
            <th colspan="2"></th>
          </tr>
        </thead>

        <tbody>
          <% @certificates.each do |certificate| %>
            <tr>
                    <td><%= certificate.number %></td>
                    <td><%= certificate.responsible_enginner %></td>
                    <td><%= certificate.description %></td>
                    <td><%= certificate.unit %></td>
                    <td><%= certificate.quantity %></td>
                    <td><%= certificate.book %></td>
                    <td><%= certificate.item %></td>
                    <td><%= certificate.company_name %></td>
                    <td><%= certificate.verified %></td>
              
              <td><%= link_to edit_certificate_path(certificate, :page => @page, q:{:number_eq => @number_eq, :responsible_enginner_cont => @responsible_enginner_cont, :company_name_cont => @company_name_cont, :description_cont => @description_cont, :kind_of_service_id_eq => @kind_of_service_id_eq, :verified_eq => @verified_eq}), class: "btn btn-outline btn-warning" do %>
                <i class="fa fa-edit"></i><% end %>
              </td>
			  
              <!-- <td><%= link_to certificate_path(certificate), class: 'btn btn-outline btn-danger', method: :delete, data: { confirm: 'Ao confirmar esta operação será perdido definitivamente os dados desta licitação. Tem certeza que deseja fazer isto?' } do %>
                <i class="fa fa-times"></i><% end %>
              </td> -->
            </tr>
          <% end %>
        </tbody>
      </table>
	  
	  <div class="apple_pagination">
        <div class="page_info">
          <%= page_entries_info @certificates %>
        </div>
        <%= will_paginate @certificates, :container => false %>
      </div>
    </div>
  </div>
</div>


