<div class="col-lg-12">
  

  <div class="panel panel-default">
    <div class="panel-heading">
      <h4>Certificações
        <%= link_to "Cadastrar", new_certificate_path,  class: "btn btn-outline btn-success pull-right", style: "margin-top: -5px" %>
      </h4>
    </div>
    <br/>

    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead>
            <tr>
			  <th><%= Certificate.human_attribute_name("number") %></th>
			  <th><%= Certificate.human_attribute_name("responsible_enginner") %></th>
			  <th><%= Certificate.human_attribute_name("description") %></th>
			  <th><%= Certificate.human_attribute_name("unit") %></th>
			  <th><%= Certificate.human_attribute_name("quantity") %></th>
			  <th><%= Certificate.human_attribute_name("book") %></th>
			  <th><%= Certificate.human_attribute_name("item") %></th>
			  <th><%= Certificate.human_attribute_name("company_name") %></th>
		      <th colspan="2"></th>
            </tr>
          </thead>
<tbody>
            <% @certificates.each do |certificate| %>
              <tr>
        <td><%= certificate.number %></td>
        <td><%= certificate.responsible_enginner %></td>
        <td><%= certificate.description %></td>
        <td><%= certificate.unit %></td>
        <td><%= certificate.quantity %></td>
        <td><%= certificate.book %></td>
        <td><%= certificate.item %></td>
        <td><%= certificate.company_name %></td>
          <td><%= link_to edit_certificate_path(certificate), class: "btn btn-outline btn-warning" do %>
                      <i class="fa fa-edit"></i><% end %>
                    </td>

          <td><%= link_to certificate_path(certificate), class: 'btn btn-outline btn-danger', method: :delete, data: { confirm: 'Ao confirmar esta operação será perdido definitivamente os dados desta licitação. Tem certeza que deseja fazer isto?' } do %>
                        <i class="fa fa-times"></i>
                    <% end %>
                    </td>
              <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>


  